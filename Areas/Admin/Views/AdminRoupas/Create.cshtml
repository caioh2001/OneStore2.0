@model OneStore.Models.Roupa

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar roupa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoupaNome" class="control-label"></label>
                <input asp-for="RoupaNome" class="form-control" />
                <span asp-validation-for="RoupaNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoupaDescricao" class="control-label"></label>
                <input asp-for="RoupaDescricao" class="form-control" />
                <span asp-validation-for="RoupaDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoupaPreco" class="control-label"></label>
                <input asp-for="RoupaPreco" class="form-control" />
                <span asp-validation-for="RoupaPreco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoupaUrlImagem" class="control-label"></label>
                <input asp-for="RoupaUrlImagem" class="form-control" />
                <span asp-validation-for="RoupaUrlImagem" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RoupaDestaque" /> @Html.DisplayNameFor(model => model.RoupaDestaque)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
                </label>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar ao estoque" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a tela anterior</a>
</div>
