@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do pedido: <strong>@Model.PedidoId</strong></p>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Roupa</th>
                    <th>Preço</th>
                </tr>
                @foreach(var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Roupa.RoupaUrlImagem" width="40" height="40"/></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Roupa.RoupaNome</td>
                        <td>@((item.Roupa.RoupaPreco).ToString("C2"))</td>
                    </tr>
                }
            </table>
            <h4>Valor total do pedido: <strong>@((ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>

<br/>

<div class="form-group" style="text-align: center">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Retornar para a página inicial</a>
</div>