@model LoginViewModel

<table class="table">
    <tr>
        <td width="20%">
            <img src="~/images/Login.png" alt="Fazer Login" class="center-block" />
        </td>

        <td>
            <div class="row">
                <div class="col-10 col-md-10 col-lg-10">
                    <h4>Login</h4>

                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">

                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="UserName" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="UserName" asp-for="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="col-md-2 control-label"></label>
                            <div class="col-md-6">
                                <input asp-for="Password" asp-for="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>

                        <br />

                        <div class="form-group">
                            <div class="col-md-8">
                                <input class="btn btn-success" type="submit" value="Login" />

                                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Registrar-se</a>
                            </div>
                        </div>

                        <br />

                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>